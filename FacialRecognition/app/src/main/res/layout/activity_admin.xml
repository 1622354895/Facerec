        android:background="@drawable/admin_button_shape"
        android:text="开闸门" />
    <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/admin_button_shape"
        android:text="关闸门" />
    <Button
        android:id="@+id/rlsb_tz"
        android:layout_width="wrap_content"
